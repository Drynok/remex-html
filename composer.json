{
	"name": "wikimedia/remex-html",
	"description": "Fast HTML 5 parser",
	"license": "MIT",
	"authors": [
		{
			"name": "Tim Starling",
			"email": "tstarling@wikimedia.org"
		}
	],
	"require": {
		"php": ">=5.5.9",
		"ext-mbstring": "*",
		"wikimedia/utfnormal": "1.1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "4.8.36",
		"mediawiki/mediawiki-codesniffer": "16.0.0",
		"mediawiki/minus-x": "0.3.1"
	},
	"autoload": {
		"psr-4": {
			"RemexHtml\\": "RemexHtml/"
		}
	},
	"scripts": {
		"test": [
			"phpunit",
			"phpcs -s -p",
			"minus-x check ."
		],
		"phpcs": "phpcs -s -p",
		"fix": [
			"phpcbf",
			"minus-x fix ."
		]
	}
}
